<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="12dp"
    tools:context=".MainActivity">

    <View
        android:layout_height="190dp"
        android:layout_width="180dp"
        android:background="@drawable/image_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/Image"
        />
    <View
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:background="@drawable/main_text_shape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/mainText"
        />

    <View
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:background="@drawable/sub_text_shape"
        app:layout_constraintLeft_toLeftOf="@+id/mainText"
        app:layout_constraintBottom_toBottomOf="@id/Image"
        android:layout_marginBottom="110dp"/>

    <View
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:background="@drawable/main_text_shape"
        app:layout_constraintTop_toBottomOf="@id/Image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        android:id="@+id/mainText2"
        />
    <View
        android:layout_width="189dp"
        android:layout_height="55dp"
        android:background="@drawable/button_shape"
        app:layout_constraintLeft_toRightOf="@+id/mainText2"
        app:layout_constraintTop_toBottomOf="@id/mainText2"
        />

    <View
        android:layout_width="90dp"
        android:layout_height="90dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>